<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <Inverter>
                <Condition ID="IsInZone" current_pose="{robot_pose}" />
            </Inverter>

            <Action ID="GetWaypoint" waypoint="{wp}"/>
            <Action ID="Move" goal="{wp}"/>
            <Action ID="UpdateLocation" goal="{wp}"/>
        
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Condition ID="IsInZone">
            <input_port name="current_pose"/>
        </Condition>
        <Action ID="GetWaypoint">
            <output_port name="waypoint"/>
        </Action>
        <Action ID="Move">
            <input_port name="goal"/>
        </Action>
        <Action ID="UpdateLocation">
            <input_port name="goal"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
