<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="3"
      main_tree_to_execute="PatrolRescueMission">
  <BehaviorTree ID="PatrolRescueMission">
    <Fallback>
      <ReactiveSequence name="PatrolMode">
        <Inverter>
          <checkReport/>
        </Inverter>
        <Sequence>
          <GetWaypoint waypoint="{wp}"/>
          <Move goal="{wp}"/>
          <scan4Victim/>
          <ReportVictim new_waypoint="{new_wp}"/>
        </Sequence>
      </ReactiveSequence>
      <Sequence name="RescueMode">
        <Move goal="{new_wp}"/>
        <RetryUntilSuccessful num_attempts="-1">
          <isEveryoneHere/>
        </RetryUntilSuccessful>
        <ResetVictim/>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="GetWaypoint"
            editable="true">
      <output_port name="waypoint"/>
    </Action>
    <Action ID="Move"
            editable="true">
      <input_port name="goal"/>
    </Action>
    <Action ID="ReportVictim"
            editable="true">
      <output_port name="new_waypoint"/>
    </Action>
    <Action ID="ResetVictim"
            editable="true"/>
    <Condition ID="CheckReport"
               editable="true"/>
    <Condition ID="IsEveryoneHere"
               editable="true"/>
    <Action ID="Scan4Victim"
            editable="true"/>
  </TreeNodesModel>

</root>
